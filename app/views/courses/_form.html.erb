<% if user_signed_in? && current_user.admin %>
  <%= form_for(@course) do |f| %>
    <% if @course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

        <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :course_name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :instructor_or_instructors %><br>
      <%= collection_check_boxes(:course, :instructor_ids, User.where(instructor: true), :id, :name) %>
    </div>

    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.date_select :start_date %>
    </div>
    <div class="field">
      <%= f.label :session_id %><br>
      <%= f.number_select :session_id %>
    </div>

    <div class="field">
      <%= f.label :start_time %><br>
      <%= f.time_select :start_time %>
    </div>

    <div class="field">
      <%= f.label :end_time %><br>
      <%= f.time_select :end_time %>
    </div>

    <div class="field">
      <%= f.label :max_class_size %><br>
      <%= f.number_field :max_class_size %>
    </div>

    <div class="field">
      <%= f.label :number_of_sessions %><br>
      <%= f.number_field :number_of_sessions %>
    </div>
    <div class="field">
      <%= f.label :tuition_in_dollars %><br>
      $<%= f.text_field :price %>.00
    </div>
    <div class="field">
      <%= f.label :level %><br>
      <%= f.number_field :level %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :discipline %><br>
      <%= collection_select(:course, :discipline_id, Discipline.all, :id, :name) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>
