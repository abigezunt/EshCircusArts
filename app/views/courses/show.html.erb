
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Instructor(s):</strong>
    <% @instructors.each do |instructor| %>
      <%= link_to instructor.name, user_path(instructor) %>
    <% end %>
  </p>
  
  <% if @course.seven_week_session_id %>
    <p>
      <strong>Seven-Week Session ID:</strong>
      <%= @course.seven_week_session_id %>
    </p>
  <% end %>

  <p>
    <strong>Start date:</strong>
    <%= @course.start_date %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= @course.start_time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= @course.end_time %>
  </p>

  <p>
    <strong>Max class size:</strong>
    <%= @course.max_class_size %>
  </p>

  <p>
    <strong>Spots left:</strong>
    <%= @course.spots_left %>
  </p>

  <p>
    <strong>Price:</strong>
    $<%= @course.price %>.00
  </p>

  <p>
    <strong>Level:</strong>
    <%= @course.level %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @course.description %>
  </p>

<% if current_user.instructor || current_user.admin %>

    <strong>All Students:</strong>
    <ol>
    <% @course.users.each do |user| %>
      <% unless @course.instructor_ids.include? user.id %>
        <li><%= link_to user.name, user_path(user) %></li>
      <% end %>
    <% end %>
    </ol>

  <%= link_to 'Edit', edit_course_path(@course) %> |

<% end %>
  
  <%= link_to 'Back', '/upcoming_classes' %>
