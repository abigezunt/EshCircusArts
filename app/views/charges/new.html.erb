<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: <%= @amount%></span>
      <span>Pay now to confirm your spot in these courses:  
        <% @unpaid_course_registrations.each do |course_registration| %>
          <%= course_registration.course.name %><%= course_registration.course.price %> 
          <%= link_to "remove", course_registration, method: :delete, data: { confirm: 'Remove this course registration?'} %>
        <% end %>
      </span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= current_user.name %>"
          data-amount="<%= current_user.unpaid_balance %>"></script>
<% end %>