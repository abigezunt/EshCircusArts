  <% if course.future %>

    <%= image_tag course.photo_url %>
    <%= link_to course.short_description, course %> <%= course.spots_left %> spots left


    <% if current_user.try(:admin?) %>
      <span><%= link_to 'Edit', edit_course_path(course) %></span> | 
      <span><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    <% end %>

  <% end %>