<h2>Upcoming seven-week session courses:</h2>

<% @sessions.each do |session| %>
  <% if session.future %>

    <%= image_tag session.photo_url %>
	  <%= render 'shared/course_description', :course => session %>
    <%= session.spots_left %> spots left

    <% if current_user.try(:admin?) %>
      <span><%= link_to 'Edit', edit_session_path(session) %></span> | 
      <span><%= link_to 'Delete', session, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    <% end %>

  <% end %>
<% end %>

<h2>Upcoming one-time classes and drop-in sessions:</h2>

<% @courses.each do |course| %>
  <% if course.future %>
    <%= image_tag course.photo_url %>
    <%= render 'shared/course_description', :course => course %>
    <%= course.spots_left %> spots left
    
    <% if current_user.try(:admin?) %>
      <span><%= link_to 'Edit', edit_course_path(course) %></span> | 
      <span><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    <% end %>

  <% end %>
<% end %>

<h3><%= link_to "Sign up", new_course_registration_path %></h3>

