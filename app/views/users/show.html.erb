<p id="notice"><%= notice %></p>

<h2><%= @user.name %></h2>
<%= image_tag @user.photo%>

<% if @user.instructor %>

  <h4><%= @user.name %> is teaching these classes:</h4>
  <ul>
    <% @user.courses.each do |course| %>
      <li><%= link_to course.name, course %> <%= render 'shared/course_time', :course => course  %></li>
    <% end %>
  </ul>

<% end %>


<% if @user == current_user %>

<h4>Your student information</h4>
<h5>This information will be shared with your instructors.</h5>

<p>
  <strong>Bio:</strong>
  <%= current_user.bio %>
</p>

<p>
  <strong>Injuries:</strong>
  <%= current_user.injuries %>
</p>

<p>
  <strong>Emergency contact name:</strong>
  <%= current_user.emergency_contact_name %>
</p>

<p>
  <strong>Emergency contact number:</strong>
  <%= current_user.emergency_contact_number %>
</p>

<p>
  <strong>Email:</strong>
  <%= current_user.email %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= current_user.phone_number %>
</p>

<p>
  <strong>Address:</strong>
  <%= current_user.address %>
</p>


<%= link_to 'Edit Your Profile', edit_user_path(current_user) %> |
<%= link_to 'Your Student Page', student_path %>
<% if current_user.admin %>
  | <%= link_to "Admin Page", admin_path %>
<% end %>


<% end %>


