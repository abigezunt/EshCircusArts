<p id="notice"><%= notice %></p>



<% if @user.instructor %>
  <h2><%= @user.name %></h2>
  
  <%= render 'shared/show_user', :user => @user %>
    <h4><%= @user.name %> is teaching these classes:</h4>
    <ul>
      <% @user.courses.each do |course| %>
        <li><%= link_to course.name, course %> <%= render 'shared/course_time', :course => course  %></li>
      <% end %>
    </ul>
    
<% elsif current_user.instructor %>

  <h2><%= @user.name %></h2>
  
  <%= render 'shared/show_user', :user => @user %>

<% else %>  
  <% redirect_to '/' %>
<% end %>


